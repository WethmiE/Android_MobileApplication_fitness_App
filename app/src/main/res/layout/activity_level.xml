<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cover"
    tools:context=".ActivityLevel">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_margin="20dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/textView_activity_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Your Activity Level"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/radioGroupLevel"
            android:layout_below="@id/textView_activity_level">

            <RadioButton
                android:id="@+id/sedentary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/purple_500"
                android:text="Sedentary"
                android:textColor="#555555"
                android:textSize="16sp" />


            <RadioButton
                android:id="@+id/LowAc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/purple_500"
                android:text="Law active"
                android:textColor="#555555"
                android:textSize="16sp" />
            <RadioButton
                android:id="@+id/Moderate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/purple_500"
                android:text="Moderate"
                android:textColor="#555555"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/hight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/purple_500"
                android:text="Highly Active"
                android:textColor="#555555"
                android:textSize="16sp" />
            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:elevation="10dp"
                android:visibility="gone" />



        </RadioGroup>


        <ImageView
            android:id="@+id/imageActive"
            android:layout_width="242dp"
            android:layout_height="199dp"
            android:layout_below="@+id/radioGroupLevel"
            android:layout_marginTop="37dp"
            android:layout_marginBottom="104dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.701"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/goal" />

        <Button
            android:id="@+id/signup4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageActive"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="70dp"
            android:text="Next" />


    </RelativeLayout>



</ScrollView>